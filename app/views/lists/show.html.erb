<h1><%= @list.name %></h1>

<hr>

<div class="movies-container">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-movie">
      <img src=<%="#{bookmark.movie.poster_url}"%>>
      <div class="card-movie-infos">
        <h2><%= bookmark.movie.title %></h2>
        <p><%= bookmark.movie.overview %></p>
        <p>Rating: <%= bookmark.movie.rating %></p>
        <p><%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete}%></p>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Add new bookmark", new_list_bookmark_path(@list) , class: "btn btn-ghost" %>
<%= link_to "Back", lists_path , class: "btn btn-ghost" %>
