<h1>Lists</h1>

<hr>

<div class="lists-container">
  <% @lists.each do |list| %>
    <div class="card-list">
      <div class="card-list-infos">
        <h2><%= link_to "#{list.name}", list_path(list) %></h2>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Create new list", new_list_path , class: "btn btn-ghost" %>
